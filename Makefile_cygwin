CC 		= 	icl -Qlocation,link,"${VCINSTALLDIR}\bin" -Qstd=c99

EXEC 	= 	frac_icl.exe

C_SOURCES 	= 	main.c frac.c generate_binary.c generate_mass.c get_wtime.c getopt.c make_mass.c mempool.c output.c quick_sort.c quick_select.c randomz.c randqueue.c scale.c
#C_OBJS 		= 	$(patsubst %.c, %.o, $(C_SOURCES))
C_OBJS 		= 	$(C_SOURCES:%.c=%.obj)
C_DEPS 		= 	$(C_SOURCES:%.c=%.d)

OBJS 		= 	$(C_OBJS)
DEPS 		= 	$(C_DEPS)
INCL 		= 	type.h func.h constant.h Makefile

CFLAGS 		= 	/Wall /O2 /Qopenmp #-fast
CFLAGS 	   += 	/D_CRT_SECURE_NO_DEPRECATE /nologo
LDFLAGS 	= 	/Qopenmp

$(EXEC) 	: 	$(OBJS) Makefile_cygwin
	$(CC) /nologo /Fe$(EXEC) $(OBJS) $(LDFLAGS)

$(C_OBJS) : %.obj : %.c Makefile_cygwin
	$(CC) $(CFLAGS) -c /Fo$@ $<

-include $(DEPS)

$(C_DEPS) : %.d : %.c
	@set -e; rm -f $@; \
	$(CC) /QMMD $(CFLAGS) /c $<; \
	sed 's/\(^.*\)\.obj[ :] */\1.obj $@ : /g' $@ | \
	sed 's/:.*\\/: /g' > $@.$$$$; \
	mv $@.$$$$ $@

.PHONY 			: 	clean
clean:
	-rm -f $(OBJS) $(DEPS) $(EXEC)
